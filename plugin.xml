<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="CodeTalk Category"
            id="CodeTalk.commands.category">
      </category>
      
      <command
            name="Function View"
            categoryId="CodeTalk.commands.category"
            id="CodeTalk.commands.FunctionView">
      </command>
      
      <command
            name="Summary View"
            categoryId="CodeTalk.commands.category"
            id="CodeTalk.commands.SummaryView">
      </command>
      <command
            name="Context View"
            categoryId="CodeTalk.commands.category"
            id="CodeTalk.commands.ContextView">
      </command>
      <command
            name="Move to Context"
            categoryId="CodeTalk.commands.category"
            id="CodeTalk.commands.MoveToContext">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="CodeTalk.commands.FunctionView"
            class="handlers.CodetalkFunctionHandler">
      </handler>
      <handler
            commandId="CodeTalk.commands.SummaryView"
            class="handlers.CodetalkSummaryHandler">
      </handler>
       <handler
            commandId="CodeTalk.commands.ContextView"
            class="handlers.ContextCommandHandler">
      </handler>
       <handler
            commandId="CodeTalk.commands.MoveToContext"
            class="handlers.MoveToContextCommandHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="CodeTalk.commands.FunctionView"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+5"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
       <key
            commandId="CodeTalk.commands.SummaryView"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
       <key
            commandId="CodeTalk.commands.ContextView"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+8"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
       <key
            commandId="CodeTalk.commands.MoveToContext"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+9"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="CodeTalk"
               mnemonic="C"
               id="CodeTalk.menus.codetalk">
            <command
                  commandId="CodeTalk.commands.FunctionView"
                  mnemonic="F"
                  id="CodeTalk.menus.funcionView">
            </command>
             <command
                  commandId="CodeTalk.commands.SummaryView"
                  mnemonic="S"
                  id="CodeTalk.menus.summaryView">
            </command>
            <command
                  commandId="CodeTalk.commands.ContextView"
                  mnemonic="C"
                  id="CodeTalk.menus.contextView">
            </command>
            <command
                  commandId="CodeTalk.commands.MoveToContext"
                  mnemonic="M"
                  id="CodeTalk.menus.moveToContext">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="CodeTalk.toolbars.codeTalkToolbar">
            <command
                  commandId="CodeTalk.commands.codeTalk"
                  icon="icons/sample.gif"
                  tooltip="CodeTalk"
                  id="CodeTalk.toolbars.codeTalk">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>